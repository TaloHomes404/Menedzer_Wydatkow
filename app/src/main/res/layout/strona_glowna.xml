<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    tools:context=".stronaGlownaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--DEKLARACJA GRAFU DO PREZENTACJI-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PLACEHOLDER - GRAPH"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:id="@+id/bttnWyswietl"
            android:text="Wyświetl wszystkie Wydatki/Przychody"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="10">

        <TextView
            android:id="@+id/dodajPrzychod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tlo"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="15dp"
            android:text="Dodaj przychód" />

        <TextView
            android:id="@+id/dodajWydatek"
            android:background="@color/tlo"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="15dp"
            android:text="Dodaj wydatek" />

    </LinearLayout>

</RelativeLayout>